%li.message{:data=>{:guid=>object.id}}

  = person_image_link(object.person)

  .content
    .from
      = link_to object.person.real_name, object.person
      .aspect
        âž”
        %ul
          - if object.public?
            %li= t('.the_world')
          - else
            - for aspect in current_user.aspects_with_post( object.id )
              %li= link_to aspect.name, aspect

      - if current_user.owns?(object)
        .right
          = link_to t('delete'), photo_path(object), :confirm => t('are_you_sure'), :method => :delete, :remote => true, :class => "delete"

    = render type_partial(object), :object => object

    .info
      %span.time= link_to(how_long_ago(object), object_path(object))
      = link_to "#{t('.show_comments')} (#{object.comments.count})", '#', :class => "show_post_comments"

    = render "comments/comments", :post => object

